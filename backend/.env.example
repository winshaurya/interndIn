# Backend environment variables example
# Copy this file to `.env` and fill values locally. Do NOT commit real secrets.

# Server
NODE_ENV=development
PORT=5004
FRONTEND_URL=http://localhost:5173

# Supabase (replace with your project's values)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Optional
SUPABASE_OAUTH_PLACEHOLDER=__supabase_oauth_placeholder__

# Email (SMTP)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=no-reply@example.com
EMAIL_PASS=smtp-password

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Other
# Add any additional env vars here
