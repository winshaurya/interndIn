# Backend environment variables example
# Copy this file to `.env` and fill values locally. Do NOT commit real secrets.

# Server
NODE_ENV=development
PORT=5004
FRONTEND_URL=http://localhost:5173

# Supabase (replace with your project's values)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here
SUPABASE_PROJECT_REF=your_project_ref_here

# Database (optional - if not using Supabase-managed connection string)
DATABASE_URL=postgresql://user:password@host:5432/dbname

# JWT (if used)
JWT_SECRET=replace_this_with_a_strong_secret

# Email (SMTP)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=no-reply@example.com
EMAIL_PASS=smtp-password

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Other
# Add any additional env vars here
